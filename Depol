  <!-- SCRIPTS -->
  <script>
    // mobile nav
    const hamburger = document.getElementById('hamburger');
    const navLinks  = document.getElementById('navLinks');
    hamburger.onclick = () => navLinks.classList.toggle('open');

    // fade-up observer
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>e.target.classList.toggle('visible',e.isIntersecting))
    },{threshold:.2});
    document.querySelectorAll('.fade-up').forEach(el=>io.observe(el));

    // dynamic year
    document.getElementById('yr').textContent = new Date().getFullYear();

    // gallery filter
    const galleryData = {
      barber:['barber1.jpg','barber2.jpg','barber3.jpg','barber4.jpg'],
      graphics:['gfx1.jpg','gfx2.jpg','gfx3.jpg'],
      photo:['photo1.jpg','photo2.jpg','photo3.jpg','photo4.jpg','photo5.jpg']
    };
    const galleryGrid = document.getElementById('galleryGrid');
    const tabBtns     = document.querySelectorAll('.tab-btn');
    function renderGallery(set){
      galleryGrid.innerHTML='';
      galleryData[set].forEach(src=>{
        const img=new Image();
        img.src=`assets/gallery/${set}/${src}`;
        img.loading='lazy';
        galleryGrid.appendChild(img);
      });
    }
    tabBtns.forEach(btn=>btn.onclick=()=>{
      tabBtns.forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      renderGallery(btn.dataset.filter);
    });
    renderGallery('barber');

    // testimonial slider
    const slider = document.getElementById('testimonialSlider');
    let index=0;
    setInterval(()=>{
      index=(index+1)%3;
      slider.style.transform=`translateX(-${index*100}%)`;
    },5000);

    // payment toggle
    const radios = document.querySelectorAll('input[name="pay"]');
    const mobileBox = document.getElementById('mobileFields');
    radios.forEach(r=>r.onchange=()=>{
      mobileBox.style.display=(r.value==='mobile')?'block':'none';
    });

    // PayPal SDK (sandbox â€“ swap client-id for live)
    const loadPayPal=()=>{
      const script=document.createElement('script');
      script.src='https://www.paypal.com/sdk/js?client-id=AbCdEfGhIjKlMnOpQrStUvWxYz&currency=USD&intent=capture';
      script.onload=()=>{
        paypal.Buttons({
          style:{color:'gold',shape:'rect'},
          createOrder:(data,actions)=>actions.order.create({
            purchase_units:[{amount:{value:'10.00'}}] // TODO dynamic price
          }),
          onApprove:(data,actions)=>actions.order.capture().then(details=>{
            alert('Payment received, '+details.payer.name.given_name);
            document.getElementById('bookingForm').reset();
          })
        }).render('#paypal-button-container');
      };
      document.body.appendChild(script);
    };
    loadPayPal();

    // booking form submit
    document.getElementById('bookingForm').onsubmit=async(e)=>{
      e.preventDefault();
      const fd = new FormData(e.target);
      const data=Object.fromEntries(fd);
      // TODO: POST to your serverless function
      console.log('Booking:',data);
      alert('Booking received! We will WhatsApp you shortly.');
      e.target.reset();
    };
  </script>
